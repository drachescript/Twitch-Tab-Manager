{
  "manifest_version": 3,
  "name": "Twitch Tab Manager",
  "description": "Open your followed Twitch streams when they go liveâ€”unmute/resume, avoid duplicates, and limit tabs automatically.",
  "version": "1.0.5",
  "author": "dragonscripts",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "192": "icons/icon192.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitch Tab Manager"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "permissions": ["tabs", "storage", "alarms", "scripting", "downloads"],
  "host_permissions": ["*://www.twitch.tv/*"],
  "web_accessible_resources": [
    { "resources": ["content_unmute.js"], "matches": ["*://www.twitch.tv/*"] }
  ]
}
