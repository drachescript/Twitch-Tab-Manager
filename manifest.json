{
  "manifest_version": 3,
  "name": "Twitch Tab Manager",
  "description": "Opens/closes Twitch stream tabs from follows.txt, dedupes, and auto-unmutes/resumes if enabled.",
  "version": "1.0.1",
  "author": "dragonscripts",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "192": "icons/icon192.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitch Tab Manager"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["tabs", "storage", "alarms", "scripting"],
  "host_permissions": ["*://www.twitch.tv/*"],
  "web_accessible_resources": [
    { "resources": ["content_unmute.js"], "matches": ["*://www.twitch.tv/*"] }
  ]
}
